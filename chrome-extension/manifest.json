{
  "manifest_version": 3,
  "name": "Day Trade Dash Enhanced",
  "version": "1.0",
  "description": "Enhanced day trading tools: copy tickers and highlight promising stocks",
  "permissions": [
    "clipboardWrite",
    "tabs"
  ],
  "host_permissions": [
    "https://www.tradingview.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatroom.warriortrading.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
